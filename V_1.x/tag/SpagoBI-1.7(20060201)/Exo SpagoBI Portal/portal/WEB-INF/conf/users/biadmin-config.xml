<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <owner>biadmin</owner>
  <!-- <locale>it</locale> -->
  <viewPermission>owner</viewPermission>
  <editPermission>owner</editPermission>


  <portalLayout renderer="ContainerRowRenderer" decorator="exo"
                width="100%" height="100%">


   <portlet>
      <showInfoBar>false</showInfoBar>
      <windowId>biadmin:/content/DisplayStaticContent/banner</windowId>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>title=Default Content</value>
          <value>uri=war:/portal/spagobi-static-content/banner.html</value>
          <value>encoding=UTF-8</value>
        </preference>
      </portlet-preferences>
    </portlet>

    <portlet>
      <portlet-style>horizontal</portlet-style>
      <showInfoBar>false</showInfoBar>
      <windowId>biadmin:/nav/HorizontalMenu/toolbar</windowId>
    </portlet>



    <container renderer="ContainerColumnRenderer" width="100%" height="100%">
      <container renderer="ContainerRowRenderer" decorator="menu" width="200px">
        <portlet>
          <portlet-style>menu</portlet-style>
          <showInfoBar>false</showInfoBar>
          <windowId>biadmin:/nav/Menu/menu</windowId>
        </portlet>
        <portlet>
          <portlet-style>welcome</portlet-style>
          <title>Welcome</title>
          <showInfoBar>false</showInfoBar>
          <windowId>biadmin:/user/WelcomePortlet/welcome-user</windowId>
        </portlet>
      </container>
      <container renderer="ContainerRowRenderer">
        <portlet height="20px">
          <portlet-style>breadcrumbs</portlet-style>
          <showInfoBar>false</showInfoBar>
          <windowId>biadmin:/nav/Breadcrumbs/breadcrumbs</windowId>
        </portlet>
        <container decorator="exo-body">
          <body>
            <componentType>page-node</componentType>
            <componentId>/</componentId>
          </body>
        </container>
      </container>
    </container>

    <portlet>
      <showInfoBar>false</showInfoBar>
      <windowId>biadmin:/content/DisplayStaticContent/footer</windowId>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>title=Default Content</value>
          <value>uri=war:/portal/spagobi-static-content/footer.html</value>
          <value>encoding=UTF-8</value>
        </preference>
      </portlet-preferences>
    </portlet>
  </portalLayout>
</portal-config>
