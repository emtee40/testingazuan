 <?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config decorator="community">
  <owner>admin</owner>
  <locale>en</locale>
  <viewPermission group="/user" membership="owner"/>
  <editPermission group="/user" membership="owner"/>


  <portalLayout>
    <portlet>
      <windowId>admin:/content/DisplayStaticContent/banner</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>default</name>          
          <value>id=war:/web-content/banner.html</value>
        </preference>
        <creator>admin</creator>
        <modifier>admin</modifier>
      </portlet-preferences>
    </portlet>

    <container renderer="ContainerColumnRenderer" decorator="community-toolbar">
      <portlet>
        <windowId>admin:/web/NavigationPortlet/community-toolbar</windowId>
        <portlet-style>community-toolbar</portlet-style>
        <showInfoBar>false</showInfoBar>
        <portlet-preferences>
          <preference>
            <name>template</name>
            <value>community/navigation/horizontal/popup.gtmpl</value>
            <read-only>false</read-only>
          </preference>      
          <creator>admin</creator>
          <modifier>admin</modifier>
        </portlet-preferences>            
      </portlet>
      <portlet width="325px">
        <title>Login</title>
        <windowId>admin:/user/WelcomePortlet/welcome-user</windowId>
        <portlet-style>community-login</portlet-style>
        <showInfoBar>false</showInfoBar>
      </portlet>
    </container>

    <portlet>
      <windowId>admin:/web/PortalModePortlet/portal-edit-mode</windowId>
      <portlet-style>portal-mode</portlet-style>
      <showInfoBar>false</showInfoBar>
    </portlet>    

    <container renderer="ContainerRowRenderer" width="100%" height="100%">
      <portlet>
        <windowId>admin:/web/PortalInfoPortlet/breadcumbs</windowId>
        <showInfoBar>false</showInfoBar>
        <portlet-preferences>
          <preference>
            <name>template</name>
            <value>community/breadcumbs.vm</value>
            <read-only>false</read-only>
          </preference>
          <creator>admin</creator>
          <modifier>admin</modifier>
        </portlet-preferences>
      </portlet>
      <container>
        <body>
          <componentType>page-node</componentType>
          <componentId>/</componentId>
        </body>
      </container>
    </container>

    <portlet>
      <windowId>admin:/content/DisplayStaticContent/footer</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>id=war:/web-content/footer.html</value>
        </preference>
        <creator>admin</creator>
        <modifier>admin</modifier>
      </portlet-preferences>
    </portlet>
  </portalLayout>
</portal-config>
