<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set>
  <page renderer="PageColumnRenderer">
    <owner>admin</owner>
    <name>/home</name>
    <title>Home</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>

    <container renderer="FirstLevelTabRenderer" decorator="page" id="news">      
      <portlet decorator="community" >
        <title>News</title>
        <windowId>exo:/content/DisplayStaticContent/news2</windowId>
        <showInfoBar>true</showInfoBar>
        <portlet-preferences>
          <preference>
            <name>Introduction</name>
            <value>id=war:/web-content/home/news</value>
            <read-only>false</read-only>
          </preference>          
          <creator>admin</creator>
          <modifier>admin</modifier>
        </portlet-preferences>
      </portlet>        
      
      <portlet decorator="community" >
	<title>eXo platform</title>
	<windowId>exo:/content/DisplayStaticContent/news1</windowId>
	<showInfoBar>true</showInfoBar>
	<portlet-preferences>
  	  <preference>
    	  <name>Introduction</name>
  	  <value>id=war:/web-content/home/exoplatform</value>
	  <read-only>false</read-only>
	  </preference>
          <creator>admin</creator>
          <modifier>admin</modifier>
	</portlet-preferences>
      </portlet>        
    </container>
  </page>

  <page>
    <owner>admin</owner>
    <name>/home/organization</name>
    <title>Organization</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>Organization</title>
      <windowId>admin:/content/DisplayStaticContent/organization</windowId>
      <portlet-style>exo-content</portlet-style>
      <portlet-preferences>
        <preference>
          <name>Introduction</name>
          <value>id=war:/portal/static-content/home-intro</value>
        </preference>
        <creator>admin</creator>
        <modifier>admin</modifier>
      </portlet-preferences>
    </portlet>
  </page>

  <page>
    <owner>admin</owner>
    <name>/home/organization/registration</name>
    <title>Registration</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>Registration</title>
      <windowId>admin:/user/RegisterPortlet/window-register</windowId>
      <portlet-style>register</portlet-style>
    </portlet>
  </page>

  <page>
    <owner>admin</owner>
    <name>/home/organization/management</name>
    <title>Managenent</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>Mangement</title>
      <windowId>admin:/user/Organization/management</windowId>
      <portlet-style>organization</portlet-style>
    </portlet>
  </page>
  
  <page>
    <owner>admin</owner>
    <name>/home/organization/portaladmin</name>
    <title>Portal Admin</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>Portal Admin</title>
      <windowId>admin:/exo-admin/PortalAdminPortlet/portal-admin</windowId>
      <portlet-style>portal-admin</portlet-style>
    </portlet>
  </page>    
  
  <page>
    <owner>admin</owner>
    <name>/home/portal/registry</name>
    <title>Portlet Management</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>Portlet Management</title>
      <windowId>admin:/exo-admin/PortletManagement/portletmanagement</windowId>
      <portlet-style>portletmanagement</portlet-style>
    </portlet>
  </page>
  <page>
    <owner>admin</owner>
    <name>/home/monitoring</name>
    <title>Monitoring</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>Monitoring</title>
      <windowId>admin:/content/DisplayStaticContent/monitoring</windowId>
      <portlet-style>exo-content</portlet-style>
      <portlet-preferences>
        <preference>
          <name>Introduction</name>
          <value>id=war:/portal/static-content/home-intro</value>
          <value>encoding=UTF-8</value>
        </preference>
        <creator>admin</creator>
        <modifier>admin</modifier>
      </portlet-preferences>
    </portlet>
  </page>

  <page>
    <owner>admin</owner>
    <name>/home/monitoring/jmx</name>
    <title>JMX Monitoring</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>JMX Monitoring</title>
      <windowId>admin:/jmx/JMXPortlet/jmx</windowId>
      <portlet-style>jmx</portlet-style>
    </portlet>
  </page>

  <page>
    <owner>admin</owner>
    <name>/home/portal/i18n</name>
    <title>Internationalization</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet>
      <title>Internationalization</title>
      <windowId>admin:/exo-admin/ResourcesPortlet/resources-demo</windowId>
      <portlet-style>resources</portlet-style>
    </portlet>
  </page>

  <page>
    <owner>admin</owner>
    <name>/home/portal/backup</name>
    <title>Backup</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>Backup</title>
      <windowId>admin:/exo-admin/BackupPortlet/backup</windowId>
      <portlet-style>backup</portlet-style>
    </portlet>
  </page>
  
  <page>
    <owner>admin</owner>
    <name>/home/portal/index</name>
    <title>Indexing</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet width="*">
      <title>Indexing</title>
      <windowId>admin:/exo-admin/IndexerManagerPortlet/indexer</windowId>
    </portlet>
  </page>  

  <page>
    <owner>admin</owner>
    <name>/home/sitemap</name>
    <title>Site Map</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet>
      <windowId>admin:/web/PortalInfoPortlet/sitemap</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>template</name>
          <value>community/sitemap.vm</value>
          <read-only>true</read-only>
        </preference>
        <creator>admin</creator>
        <modifier>admin</modifier>
      </portlet-preferences>
    </portlet>
  </page>
</page-set>
