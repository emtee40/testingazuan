<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config decorator="community">
  <owner>portal</owner>
  <locale>en</locale>
  <viewPermission group="/guest" membership="*"/>

  <portalLayout>
    <portlet>
      <windowId>portal:/content/DisplayStaticContent/banner</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>title=Default Content</value>
          <value>uri=war:/resources/community/web-content/banner.html</value>
          <value>encoding=UTF-8</value>
        </preference>
      </portlet-preferences>
    </portlet>

    <container renderer="ContainerColumnRenderer" decorator="community-toolbar">
      <portlet>
        <windowId>portal:/web/NavigationPortlet/community-toolbar</windowId>
        <portlet-style>community-toolbar</portlet-style>
        <showInfoBar>false</showInfoBar>
        <portlet-preferences>
          <preference>
            <name>template</name>
            <value>community/navigation/horizontal/popup.gtmpl</value>
            <read-only>false</read-only>
          </preference>      
        </portlet-preferences>            
      </portlet>
      <portlet width="325px">
        <title>Login</title>
        <windowId>portal:/user/WelcomePortlet/welcome-user</windowId>
        <portlet-style>community-login</portlet-style>
        <showInfoBar>false</showInfoBar>
      </portlet>
    </container>
    
    <!--
    <portlet>
      <windowId>portal:/web/PortalModePortlet/portal-edit-mode</windowId>
      <portlet-style>portal-mode</portlet-style>
      <showInfoBar>false</showInfoBar>
    </portlet>
    -->
    <!--
    <container renderer="ContainerColumnRenderer" decorator="community-toolbar">
    <portlet>
      <windowId>portal:/web/PortalInfoPortlet/breadcumbs</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>template</name>
          <value>community/breadcumbs.vm</value>
          <read-only>true</read-only>
        </preference>
      </portlet-preferences>
    </portlet>    
    <portlet>
      <windowId>portal:/web/LanguageSelector/languageSelector</windowId>
      <showInfoBar>true</showInfoBar>
    </portlet>
    </container>
    -->

    <container renderer="ContainerColumnRenderer">
      <container>        
        <body>
          <componentType>page-node</componentType>
          <componentId>/</componentId>
        </body>
      </container>
    </container>
    <portlet>
      <windowId>portal:/content/DisplayStaticContent/footer</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>title=Default Content</value>
          <value>uri=war:/resources/community/web-content/footer.html</value>
          <value>encoding=UTF-8</value>
        </preference>
      </portlet-preferences>
    </portlet>   
  </portalLayout>
</portal-config>
