-->


	<filter-mapping>
		<filter-name>SpagoBIAccessFilter</filter-name>
		<url-pattern>/GeoReportEngineStartAction/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>SpagoBIAccessFilter</filter-name>
		<url-pattern>/MapOl/*</url-pattern>
	</filter-mapping>



    <!--  ============================================================================ -->
	<!--  SERVLETS								 									                                   -->
	<!--  ============================================================================ -->
	
	<servlet>
  		<servlet-name>ProxyTicketReceptor</servlet-name> 
  		<servlet-class>edu.yale.its.tp.cas.proxy.ProxyTicketReceptor</servlet-class> 
		<init-param>
  			<param-name>edu.yale.its.tp.cas.proxyUrl</param-name> 
  			<param-value>https://localhost:8443/exo-cas-2/proxy</param-value> 
  		</init-param>
    </servlet>


	<servlet>
		<servlet-name>GeoReportEngineStartAction</servlet-name>
		<servlet-class>
			it.eng.spagobi.engines.georeport.services.GeoReportEngineStartAction
		</servlet-class>
	</servlet>
	
	<servlet>
      <servlet-name>MapOl</servlet-name>
      <servlet-class>
			it.eng.spagobi.engines.georeport.services.MapOlAction
	  </servlet-class>
    </servlet>

	<!--  ============================================================================ -->
	<!--  SERVLET MAPPINGS						 									                               -->
	<!--  ============================================================================ -->
	    
 	<servlet-mapping>
  		<servlet-name>ProxyTicketReceptor</servlet-name> 
  		<url-pattern>/proxyReceptor</url-pattern> 
  	</servlet-mapping> 


	<servlet-mapping>
		<servlet-name>GeoReportEngineStartAction</servlet-name>
		<url-pattern>/GeoReportEngineStartAction</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
    	<servlet-name>MapOl</servlet-name>
    	<url-pattern>/MapOl</url-pattern>
  	</servlet-mapping>
	
	
	<!--  ============================================================================ -->
	<!--  WELCOME PAGE 									                               -->
	<!--  ============================================================================ -->
	<welcome-file-list>
		<welcome-file>/html/index.jsp</welcome-file>
	</welcome-file-list>

	<!--  ============================================================================ -->
	<!--  ERROR PAGES								                               		-->
	<!--  ============================================================================ -->
	  <error-page>
	  	<exception-type>java.lang.Throwable</exception-type>
	  	<location>/html/error.html</location>
	  </error-page>
		 
	  <error-page>
	  	<error-code>404</error-code>
	  	<location>/html/error.html</location>
	  </error-page>
  
	  <error-page>
	  	<error-code>500</error-code>
	  	<location>/html/error.html</location>
	  </error-page>

</web-app>

