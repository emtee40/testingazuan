<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set>
  <page renderer="PageColumnRenderer">
    <owner>@owner@</owner>
    <name>/home</name>
    <title>Home</title>
    <viewPermission group="/guest" membership="*"/>

    <container width="200px" decorator="menu-column">
      <portlet>
        <windowId>@owner@:/web/NavigationPortlet/menu</windowId>
        <portlet-style>menu</portlet-style>
        <showInfoBar>false</showInfoBar>
        <portlet-preferences>
          <preference>
            <name>template</name>
            <value>community/navigation/vertical/popup.gtmpl</value>
            <read-only>false</read-only>
          </preference>      
        </portlet-preferences>            
      </portlet>
      <portlet decorator="default">
	      <windowId>@owner@:/content/DisplayStaticContent/download</windowId>
	      <showInfoBar>false</showInfoBar>
	      <portlet-preferences>
	        <preference>
	          <name>default</name>
	          <value>title=Default Content</value>
	          <value>uri=war:/resources/community/web-content/download</value>
	          <value>encoding=UTF-8</value>
	        </preference>
	      </portlet-preferences>
	    </portlet>
	    <portlet>
	      <windowId>@owner@:/web/PortalInfoPortlet/visited-page</windowId>
	      <showInfoBar>false</showInfoBar>
	      <portlet-preferences>
          <preference>
            <name>template</name>
            <value>community/visited-page.html</value>
            <read-only>false</read-only>
          </preference>      
        </portlet-preferences>	      
	    </portlet>
    </container>

    <container renderer="FirstLevelTabRenderer" decorator="page" id="news">      
      <portlet decorator="community" >
        <title>News</title>
        <windowId>@owner@:/content/DisplayStaticContent/new2</windowId>
        <showInfoBar>true</showInfoBar>
        <portlet-preferences>
          <preference>
            <name>Introduction</name>
            <value>title=content.title.introduction</value>
            <value>uri=war:/resources/community/web-content/home/news</value>
            <value>encoding=UTF-8</value>
            <read-only>false</read-only>
          </preference>
        </portlet-preferences>
      </portlet>      
      <portlet decorator="community" >
				<title>eXo platform</title>
				<windowId>@owner@:/content/DisplayStaticContent/new1</windowId>
				<showInfoBar>true</showInfoBar>
				<portlet-preferences>
					<preference>
						<name>Introduction</name>
						<value>title=content.title.introduction</value>
						<value>uri=war:/resources/community/web-content/home/exoplatform</value>
						<value>encoding=UTF-8</value>
						<read-only>false</read-only>
					</preference>
				</portlet-preferences>
      </portlet>
    </container>
  </page>

  <page renderer="FirstLevelTabRenderer" id="ECMPage">
    <owner>@owner@</owner>
    <name>/home/portlets/ecm</name>
    <title>cms</title>
    <viewPermission group="/user" membership="owner"/>
    <editPermission group="/user" membership="owner"/>
    <portlet>
      <title>ECM File Explorer</title>
      <windowId>@owner@:/cms-content/JCRExplorer/jcr</windowId>
      <portlet-style>explorer</portlet-style>
    </portlet>
  </page>
</page-set>
