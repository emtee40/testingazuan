	    		<include name="**/*.jar"/>
	    	</fileset>
	    </copy>	
	    <copy todir="../SpagoBIJasperReportEngine/WebContent/WEB-INF/lib" overwrite="true">
	    	<fileset dir="./dist">
	    		<include name="**/*.jar"/>
	    	</fileset>
	    </copy>	
	    <copy todir="../SpagoBIJPivotEngine/WebContent/WEB-INF/lib" overwrite="true">
	    	<fileset dir="./dist">
	    		<include name="**/*.jar"/>
	    	</fileset>
	    </copy>	
	    <copy todir="../SpagoBIQbeEngine/WebContent/WEB-INF/lib" overwrite="true">
	    	<fileset dir="./dist">
	    		<include name="**/*.jar"/>
	    	</fileset>
	    </copy>			
		<copy todir="../SpagoBIGeoEngine/WebContent/WEB-INF/lib" overwrite="true">
			<fileset dir="./dist">
				<include name="**/*.jar"/>
			</fileset>
		</copy>		
		<copy todir="../SpagoBIJPaloEngine/WebContent/WEB-INF/lib" overwrite="true">
		  	<fileset dir="./dist">
