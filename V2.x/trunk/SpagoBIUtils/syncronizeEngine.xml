	  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	  <!--   PULIZIA AMBIENTE						            -->
	  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++--> 
	  <target name="clean" >
	    <delete dir="./dist"/>
	  </target>	   
	
	  <target name="init" depends="clean">
	    <!-- Create the time stamp -->
	    <tstamp/>
	    <mkdir dir="./dist"/>    
	  </target>
 
	<target name="create.jar" depends="init" >
	
		<jar destfile="./dist/spagobi-utils.jar">
			<fileset dir="./bin">
			  <include name="**/*.class"/>	
			</fileset>
			<fileset dir=".">
				<include name="**/*.jar"/>	
			</fileset>
		</jar>
	    	         	           
	</target>
	
	<target name="copy.jar" depends="create.jar" >
	    <copy todir="../SpagoBIBirtReportEngine/WebContent/WEB-INF/lib" overwrite="true">
