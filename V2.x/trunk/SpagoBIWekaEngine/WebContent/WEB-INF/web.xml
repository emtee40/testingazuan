	<servlet>
        <servlet-name>WekaServlet</servlet-name>
        <servlet-class>it.eng.spagobi.engines.weka.WekaServlet</servlet-class>
    	<init-param>
            <param-name>SECURITY_ABLE</param-name>
            <param-value>FALSE</param-value>
        </init-param>
    </servlet>
    
    <servlet>
		<servlet-name>EngineTestServlet</servlet-name>
		<servlet-class>
			it.eng.spagobi.utilities.engines.EngineTestServlet
		</servlet-class>
	</servlet>
    
    <servlet-mapping>
        <servlet-name>WekaServlet</servlet-name>
        <url-pattern>/WekaServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
