        <url-pattern>/WekaServletBackEnd</url-pattern>
    </servlet-mapping>    
    
    <servlet-mapping>
		<servlet-name>EngineTestServlet</servlet-name>
		<url-pattern>/WekaServletTest</url-pattern>
	</servlet-mapping>
    
