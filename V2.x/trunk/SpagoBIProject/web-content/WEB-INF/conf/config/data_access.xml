<?xml version="1.0" encoding="ISO-8859-1"?>
<DATA-ACCESS>
   <DATE-FORMAT format="DD-MM-YYYY"/>
   <TIMESTAMP-FORMAT format="DD-MM-YYYY hh:mm:ss"/>
   
    <CONNECTION-POOL connectionPoolName="dwh" connectionPoolFactoryClass="it.eng.spago.dbaccess.factory.AppServerManagedConnectionPoolFactory">
        <CONNECTION-POOL-PARAMETER parameterName="jndiName" parameterValue="java:comp/env/jdbc/foodmart" />
        <CONNECTION-POOL-PARAMETER parameterName="driverVersion" parameterValue="2.1" />
        <CONNECTION-POOL-PARAMETER parameterName="sqlMapperClass" parameterValue="it.eng.spago.dbaccess.sql.mappers.MySQLMapper" />
    </CONNECTION-POOL>
      
    <CONNECTION-POOL connectionPoolName="foodmart" connectionPoolFactoryClass="it.eng.spago.dbaccess.factory.AppServerManagedConnectionPoolFactory">
        <CONNECTION-POOL-PARAMETER parameterName="jndiName" parameterValue="java:comp/env/jdbc/foodmart" />
        <CONNECTION-POOL-PARAMETER parameterName="driverVersion" parameterValue="2.1" />
        <CONNECTION-POOL-PARAMETER parameterName="sqlMapperClass" parameterValue="it.eng.spago.dbaccess.sql.mappers.MySQLMapper" />
    </CONNECTION-POOL>
    
    <CONNECTION-POOL connectionPoolName="spagobi" 
             					connectionPoolFactoryClass="it.eng.spago.dbaccess.factory.DBCPConnectionPoolFactory" 
             					connectionPoolType="native" connectionDescription="SpagoBI Metadata on HSQL DB">
	  <CONNECTION-POOL-PARAMETER parameterName="connectionString" parameterValue="jdbc:hsqldb:hsql://localhost:9002/spagobi" parameterType=""/>
      <CONNECTION-POOL-PARAMETER parameterName="driverClass" parameterValue="org.hsqldb.jdbcDriver" parameterType=""/>
      <CONNECTION-POOL-PARAMETER parameterName="driverVersion" parameterValue="2.1" parameterType=""/>
      <CONNECTION-POOL-PARAMETER parameterName="user" parameterValue="sa" parameterType=""/>
      <CONNECTION-POOL-PARAMETER parameterName="userPassword" parameterValue="" parameterType=""/>
      <CONNECTION-POOL-PARAMETER parameterName="poolMinLimit" parameterValue="1" parameterType=""/>
      <CONNECTION-POOL-PARAMETER parameterName="poolMaxLimit" parameterValue="10" parameterType=""/>
      <CONNECTION-POOL-PARAMETER parameterName="cacheTimeToLiveTimeout" parameterValue="10" parameterType="" />
      <CONNECTION-POOL-PARAMETER parameterName="cacheInactivityTimeout" parameterValue="10" parameterType="" />
      <CONNECTION-POOL-PARAMETER parameterName="sqlMapperClass" parameterValue="it.eng.spago.dbaccess.sql.mappers.OracleSQLMapper" parameterType=""/>             					

   	</CONNECTION-POOL>
   
   <CONNECTION-MANAGER>  
      <REGISTER-POOL registeredPoolName="dwh"/>
      <REGISTER-POOL registeredPoolName="foodmart"/>
      <REGISTER-POOL registeredPoolName="spagobi"/>
   </CONNECTION-MANAGER>
   
</DATA-ACCESS>

