     -->
  <STATEMENT name="DELETE_KPI" query="DELETE FROM sbi_kpi WHERE kpi_id=?" />

  <STATEMENT name="DETAIL_KPI"
    query="SELECT KPI_ID as id, DS_ID, name, description, document_label, code, metric, weight FROM sbi_kpi WHERE kpi_id = ?" />

  <STATEMENT name="UPDATE_KPI"
    query="UPDATE sbi_kpi SET name=?,
                              description=?,
                              document_label=?,
                              ds_id=?,
                              code=?,
                              metric=?,
                              weight=? 
                        WHERE kpi_id=?" />

  <STATEMENT name="INSERT_KPI"
    query="INSERT INTO sbi_kpi (name, 
                                description, 
                                document_label, 
                                ds_id,
                                code, 
                                metric,
                                weight)
           VALUES (?,?,?,?,?,?,?);" />

