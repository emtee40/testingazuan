<?xml version="1.0" encoding="ISO-8859-1"?>
<MODULES>
  <MODULE name="ListKpiModule" class="it.eng.spagobi.kpi.config.service.ListKpiModule">
    <CONFIG pool="spagobi" rows="10" title="sbi.kpi.config.list.title">
      <QUERIES>
        <SELECT_QUERY statement="LIST_KPI" />
        <DELETE_QUERY statement="DELETE_KPI">
          <PARAMETER scope="SERVICE_REQUEST" type="RELATIVE" value="ID" />
        </DELETE_QUERY>
      </QUERIES>
      <COLUMNS>
        <COLUMN label="sbi.kpi.label.name" name="NAME" />
        <COLUMN label="sbi.kpi.label.description" name="DESCRIPTION" />
      </COLUMNS>
      <CAPTIONS>
        <SELECT_CAPTION confirm="FALSE" image="/img/detail.gif" label="sbi.kpi.caption.select">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="KpiPage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="DetailKpiModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="DETAIL_SELECT" />
          <PARAMETER name="ID" scope="LOCAL" type="RELATIVE" value="ID" />
        </SELECT_CAPTION>
        <DELETE_CAPTION confirm="TRUE" image="/img/erase.gif" label="sbi.kpi.caption.delete">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="KpiPage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="ListKpiModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="LIST_DELETE" />
          <PARAMETER name="ID" scope="LOCAL" type="RELATIVE" value="ID" />
        </DELETE_CAPTION>
      </CAPTIONS>
      <BUTTONS>
        <INSERT_BUTTON confirm="TRUE" image="/img/new.png" label="sbi.kpi.button.insert.title">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="KpiPage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="DetailKpiModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="DETAIL_NEW" />
        </INSERT_BUTTON>
        <BACK_BUTTON confirm="FALSE" image="/img/back.png" label="sbi.kpi.button.back.title"
          onlyPortletRunning="true">
          <PARAMETER name="ACTION_NAME" scope="" type="ABSOLUTE"
            value="KPIConfigurationAction" />
          <PARAMETER name="LIGHT_NAVIGATOR_RESET" scope="" type="ABSOLUTE"
            value="true" />
        </BACK_BUTTON>
      </BUTTONS>
    </CONFIG>
  </MODULE>
  <MODULE name="DetailKpiModule" class="it.eng.spago.dispatching.module.detail.impl.DefaultDetailModule">
    <CONFIG pool="spagobi" title="sbi.kpi.config.detail.title">
      <QUERIES>
        <SELECT_QUERY statement="DETAIL_KPI">
          <PARAMETER type="RELATIVE" value="ID" scope="SERVICE_REQUEST" />
        </SELECT_QUERY>
        <UPDATE_QUERY statement="UPDATE_KPI">
          <PARAMETER type="RELATIVE" value="NAME" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="DESCRIPTION" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="DOCUMENT_LABEL" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="DS_ID" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="CODE" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="METRIC" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="WEIGHT" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="ID" scope="SERVICE_REQUEST" />
        </UPDATE_QUERY>
        <INSERT_QUERY statement="INSERT_KPI">
          <PARAMETER type="RELATIVE" value="NAME" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="DESCRIPTION" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="DOCUMENT_LABEL" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="DS_ID" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="CODE" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="METRIC" scope="SERVICE_REQUEST" />
          <PARAMETER type="RELATIVE" value="WEIGHT" scope="SERVICE_REQUEST" />
        </INSERT_QUERY>
      </QUERIES>
      <FIELDS>
        <FIELD name="ID" label="ID" widget="" size="60" />
        <FIELD name="DESCRIPTION" label="DESCRIPTION" widget="" size="60" />
        <FIELD name="NAME" label="NAME" widget="" size="60" />
        <FIELD name="DOCUMENT_LABEL" label="DOCUMENT LABEL" widget="" size="60" />
        <FIELD name="CODE" label="CODE" widget="" size="60" />
        <FIELD name="METRIC" label="METRIC" widget="" size="60" />
      </FIELDS>
      <BUTTONS />
    </CONFIG>
  </MODULE>
</MODULES>