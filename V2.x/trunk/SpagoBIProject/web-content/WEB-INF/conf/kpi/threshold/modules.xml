<?xml version="1.0" encoding="ISO-8859-1"?>
<MODULES>
  <MODULE name="ListThresholdsModule" class="it.eng.spagobi.kpi.threshold.service.ListThresholdsModule">
    <CONFIG pool="spagobi" rows="10" title="sbi.kpi.list.thresholds.title">
      <QUERIES>
        <SELECT_QUERY>
          <ORDER_BY  scope="SERVICE_REQUEST" type="RELATIVE" value="FIELD_ORDER"/>
          <ORDER_BY  scope="SERVICE_REQUEST" type="RELATIVE" value="TYPE_ORDER" />
          <PARAMETER name="LIGHT_NAVIGATOR_REPLACE_LAST" scope="" type="ABSOLUTE" value="true" />
        </SELECT_QUERY>
      </QUERIES>
      <COLUMNS>
        <COLUMN label="sbi.kpi.label.name" name="NAME" />
        <COLUMN label="sbi.kpi.label.code" name="CODE" />
      </COLUMNS>
      <CAPTIONS>
        <SELECT_CAPTION confirm="FALSE" image="/img/detail.gif" label="sbi.kpi.caption.select">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="ThresholdPage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="DetailThresholdModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="DETAIL_SELECT" />
          <PARAMETER name="ID" scope="LOCAL" type="RELATIVE" value="ID" />
        </SELECT_CAPTION>
        <VALUE_CAPTION confirm="FALSE" image="/img/kpi/thresholdValueIcon.png"
          label="sbi.kpi.caption.thresholdValues">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="ThresholdValuePage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="ListThresholdValuesModule" />
          <PARAMETER name="IDT" scope="LOCAL" type="RELATIVE" value="ID" />
          <PARAMETER name="FIELD_ORDER" scope="" type="ABSOLUTE" value="POSITION" />
        </VALUE_CAPTION>
        <DELETE_CAPTION confirm="TRUE" image="/img/erase.gif" label="sbi.kpi.caption.delete">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="ThresholdPage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="ListThresholdsModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="LIST_DELETE" />
          <PARAMETER name="ID" scope="LOCAL" type="RELATIVE" value="ID" />
        </DELETE_CAPTION>
      </CAPTIONS>
      <BUTTONS>
        <INSERT_BUTTON confirm="TRUE" image="/img/new.png" label="sbi.kpi.button.insert.title">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="ThresholdPage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="DetailThresholdModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="DETAIL_NEW" />
        </INSERT_BUTTON>
        <BACK_BUTTON confirm="FALSE" image="/img/back.png" label="sbi.kpi.button.back.title"
          onlyPortletRunning="true">
          <PARAMETER name="ACTION_NAME" scope="" type="ABSOLUTE" value="LOGIN_ACTION_KPI_CONFIGURATION" />
          <PARAMETER name="LIGHT_NAVIGATOR_RESET" scope="" type="ABSOLUTE"
            value="true" />
        </BACK_BUTTON>
      </BUTTONS>
    </CONFIG>
  </MODULE>
  
  <MODULE name="DetailThresholdModule" class="it.eng.spagobi.kpi.threshold.service.DetailThresholdsModule">
    <CONFIG pool="spagobi" title="sbi.kpi.detail.thresholds.title">
    </CONFIG>
  </MODULE>
  
  <MODULE name="ListThresholdValuesModule"
    class="it.eng.spagobi.kpi.threshold.service.ListThresholdValuesModule">
    <CONFIG pool="spagobi" rows="10" title="sbi.kpi.list.thresoldValues.title">
      <QUERIES>
        <SELECT_QUERY>
          <PARAMETER name="IDT" scope="SERVICE_REQUEST" type="RELATIVE" value="IDT" />
          <ORDER_BY  scope="SERVICE_REQUEST" type="RELATIVE" value="FIELD_ORDER"/>
          <ORDER_BY  scope="SERVICE_REQUEST" type="RELATIVE" value="TYPE_ORDER" />
          <PARAMETER name="LIGHT_NAVIGATOR_REPLACE_LAST" scope="" type="ABSOLUTE" value="true" />
        </SELECT_QUERY>
      </QUERIES>
      <COLUMNS>
        <COLUMN label="sbi.kpi.label.position" name="POSITION" />
        <COLUMN label="sbi.kpi.label.label" name="LABEL" />
        <COLUMN label="sbi.kpi.label.minValue" name="MIN_VALUE" />
        <COLUMN label="sbi.kpi.label.maxValue" name="MAX_VALUE" />
      </COLUMNS>
      <CAPTIONS>
        <SELECT_CAPTION confirm="FALSE" image="/img/detail.gif" label="sbi.kpi.caption.select">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="ThresholdValuePage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="DetailThresholdValueModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="DETAIL_SELECT" />
          <PARAMETER name="ID" scope="LOCAL" type="RELATIVE" value="ID" />
          <PARAMETER name="IDT" scope="SERVICE_REQUEST" type="RELATIVE" value="IDT" />
        </SELECT_CAPTION>
        <DELETE_CAPTION confirm="TRUE" image="/img/erase.gif" label="sbi.kpi.caption.delete">
          <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="ThresholdValuePage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="ListThresholdValuesModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="LIST_DELETE" />
          <PARAMETER name="ID" scope="LOCAL" type="RELATIVE" value="ID" />
          <PARAMETER name="IDT" scope="SERVICE_REQUEST" type="RELATIVE" value="IDT" />
        </DELETE_CAPTION>
      </CAPTIONS>
      <BUTTONS>
        <INSERT_BUTTON confirm="TRUE" image="/img/new.png" label="sbi.kpi.button.insert.title">
         <PARAMETER name="PAGE" scope="" type="ABSOLUTE" value="ThresholdValuePage" />
          <PARAMETER name="MODULE" scope="" type="ABSOLUTE" value="DetailThresholdValueModule" />
          <PARAMETER name="MESSAGE" scope="" type="ABSOLUTE" value="DETAIL_NEW" />
          <PARAMETER name="IDT" scope="SERVICE_REQUEST" type="RELATIVE" value="IDT" />
        </INSERT_BUTTON>
        <BACK_BUTTON confirm="FALSE" image="/img/back.png" label="sbi.kpi.button.back.title"
          onlyPortletRunning="false">
          <PARAMETER name="LIGHT_NAVIGATOR_BACK_TO" scope="" type="ABSOLUTE"
            value="1" />
        </BACK_BUTTON>
      </BUTTONS>
    </CONFIG>
  </MODULE>
  
  <MODULE name="DetailThresholdValueModule" class="it.eng.spagobi.kpi.threshold.service.DetailThresholdValuesModule">
    <CONFIG pool="spagobi" title="sbi.kpi.detail.thresoldValues.title">
	</CONFIG>
  </MODULE>
</MODULES>