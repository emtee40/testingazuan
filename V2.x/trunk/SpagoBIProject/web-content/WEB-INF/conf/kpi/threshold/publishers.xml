<?xml version="1.0" encoding="ISO-8859-1"?>
<PUBLISHERS>
  <PUBLISHER name="ThresholdPublisher">
    <RENDERING channel="PORTLET" type="JAVA" mode="">
      <RESOURCES>
        <ITEM prog="0" resource="it.eng.spago.presentation.DefaultPublisherDispatcher">
          <CONFIG>
            <CHECKS>
              <CHECK target="ListThresholdsPublisher">
                <CONDITIONS>
                  <PARAMETER name="module" scope="SERVICE_REQUEST" value="AF_NOT_DEFINED" />
                </CONDITIONS>
              </CHECK>
              <CHECK target="ListThresholdsPublisher">
                <CONDITIONS>
                  <PARAMETER name="module" scope="SERVICE_REQUEST" value="ListThresholdsModule" />
                </CONDITIONS>
              </CHECK>
              <CHECK target="ListThresholdsPublisher">
                <CONDITIONS>
                  <PARAMETER name="message" scope="SERVICE_REQUEST" value="DETAIL_UPDATE" />
                </CONDITIONS>
              </CHECK>
              <CHECK target="DetailThresholdPublisher">
                <CONDITIONS>
                  <PARAMETER name="module" scope="SERVICE_REQUEST" value="DetailThresholdModule" />
                </CONDITIONS>
              </CHECK>
            </CHECKS>
          </CONFIG>
        </ITEM>
      </RESOURCES>
    </RENDERING>
  </PUBLISHER>
  <PUBLISHER name="ListThresholdsPublisher">
    <RENDERING channel="PORTLET" mode="FORWARD" type="JSP">
      <RESOURCES>
        <ITEM mode="VIEW" resource="/jsp/kpi/threshold/listThresholds.jsp" />
      </RESOURCES>
    </RENDERING>
  </PUBLISHER>
  <PUBLISHER name="DetailThresholdPublisher">
    <RENDERING channel="PORTLET" mode="FORWARD" type="JSP">
      <RESOURCES>
        <ITEM mode="VIEW" resource="/jsp/kpi/threshold/detailThreshold.jsp" />
      </RESOURCES>
    </RENDERING>
  </PUBLISHER>
</PUBLISHERS>