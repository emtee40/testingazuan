	<portlet>
        <description>Business Intelligence Documents</description>		
        <portlet-name>SBIFunctionality</portlet-name>		
        <display-name>Business Intelligence Documents</display-name>		
        <portlet-class>it.eng.spago.dispatching.httpchannel.AdapterPortlet</portlet-class>
        <init-param>
            <name>serviceType</name>
            <value>PAGE</value>
        </init-param>
        <init-param>
            <name>serviceName</name>
            <value>LOGIN_PAGE_SBI_FUNCTIONALITY</value>
        </init-param>
        <init-param>
            <name>light_navigation</name>
            <value>ENABLED</value>
        </init-param>	        
        <expiration-cache>0</expiration-cache>
        <supports>
	    	<mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
		</supports>
        <supported-locale>en</supported-locale>      
		<portlet-info>
        	<title>Business Intelligence Documents</title>
        	<short-title>Business Intelligence Documents</short-title>
        	<keywords>Business Intelligence Documents</keywords>
        </portlet-info>
        <portlet-preferences>
        	<!-- 
				The execution modality, if not set the portlet use the default modality showing
            	the entire tree, if the value is SINGLE_OBJECT the portlet try to exec a single object 
				and doesn't show a tree, if the value is FILTER_TREE the portlet show a sub tree
				based on the value of the PATH_SUBTREE preference       
			-->
			<preference>
        		<name>MODALITY</name>
        		<!-- possible values for this preference are (SINGLE_OBJECT/FILTER_TREE/ENTIRE_TREE) -->
        		<value>ENTIRE_TREE</value>
        	</preference>
            
            <!--  
				The path of the single object to exec
			--> 
            <preference> 
        		<name>LABEL_SINGLE_OBJECT</name>
        		<!-- if the MODALITY preference is set to SINGLE_OBJECT you have to write in this preference 
        			the label of the single object to be executed -->
        		<value></value>
        	</preference>
        	
        	<!--  
				The parameters of the single object to exec
			--> 
            <preference> 
        		<name>PARAMETERS_SINGLE_OBJECT</name>
        		<!-- if the MODALITY preference is set to SINGLE_OBJECT you have to write in this preference 
        			the parameters values of the single object to be executed with the following sintax:
        			parameterUrlName1=value1&parameterUrlName2=value2&... -->
        		<value></value>
        	</preference>
        	
	        <!--  The name of the sub object if the single object to exec has subobjects --> 
	        <preference> 
	            <name>LABEL_SUB_OBJECT</name>
	            <!-- If the portlet is configured for a single object and LABEL_SINGLE_OBJECT 
	                 item has subobject, you can specify the name of the subobject you want to execute -->
	            <value></value>
	        </preference>
            
            <!--
 			The path of the subtree to show
			-->
            <preference> 
        		<name>PATH_SUBTREE</name>
        		<!-- if the MODALITY preference is set to FILTER_TREE you have to write in this preference 
        			the path of the subTree -->
        		<value></value>
        	</preference>
			
			<!--
            the height of the area that shows the object output 
  			-->
            <preference> 
        		<name>HEIGHT_AREA</name>
        		<!-- if the MODALITY preference is set to SINGLE_OBJECT you have to write in this preference 
        			the height of the area that shows the object output -->
        		<value></value>
        	</preference>
        	
        	<preference>
        		<name>OBJECTS_VIEW</name>
        		<!-- possible values for this preference are (VIEW_OBJECTS_AS_TREE/VIEW_OBJECTS_AS_LIST) -->
        		<value>VIEW_OBJECTS_AS_TREE</value>
        	</preference>
        	
        	<!-- able / disable the maximize button into the execution pages -->
        	<!-- ATTENTION: the maximize works on Firefox and Explorer 7 (for other browsers is disabled automatically)  -->
            <preference> 
        		<name>MAXIMIZE_ABLE</name>
        		<!-- possible values are 	TRUE / FALSE -->
        		<value>FALSE</value>
        	</preference>
        	
        	
        	<!-- able / disable the notes editor into the execution pages -->
            <preference> 
        		<name>NOTES_EDITOR_ABLE</name>
        		<!-- possible values are 	TRUE / FALSE -->
        		<value>FALSE</value>
        	</preference>
        	
        	
        	<!-- set the width dimension of the notes editor  -->
            <preference> 
        		<name>NOTES_EDITOR_WIDTH</name>
        		<!--the number will be treated as number of pixel  -->
        		<value>600</value>
        	</preference>
        	
        	<!-- set the height  dimension of the notes editor  -->
            <preference> 
        		<name>NOTES_EDITOR_HEIGHT</name>
        		<!--the number will be treated as number of pixel  -->
        		<value>300</value>
        	</preference>
        	
        	<!-- if set to true the editor will be opened automatically at object execution  -->
            <preference> 
        		<name>NOTES_EDITOR_OPEN</name>
        		<!-- possible values are 	TRUE / FALSE -->
        		<value>FALSE</value>
        	</preference>
        	
        	<!--  The snapshot Name of the single object to exec --> 
            <preference> 
        		<name>SNAPSHOT_NAME</name>
        		<!-- If the portlet is configured for a single object and this preference is setted 
        		     the it will exec the snapshot with the name reported (look also at
        		     snapshot history preference) -->
        		<value></value>
        	</preference>
        	
        	<!--  The snapshot History of the single object to exec --> 
            <preference> 
        		<name>SNAPSHOT_HISTORY</name>
        		<!-- The Number of step back into the snapshot history (0 is the last, 1 is the previous one, ...)  -->
        		<value>0</value>
        	</preference>
        	
        </portlet-preferences>
	</portlet>
	
	 
