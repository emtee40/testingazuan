	<!--  ============================================================================ -->
	<!--  SERVLETS								 									   -->
	<!--  ============================================================================ -->
	<servlet>
		<servlet-name>ConfigServlet</servlet-name>
		<servlet-class>it.eng.spago.configuration.ConfigServlet</servlet-class>
		<init-param>
			<param-name>AF_CONFIG_FILE</param-name>
			<param-value>/WEB-INF/conf/master.xml</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>AdapterHTTP</servlet-name>
		<servlet-class>it.eng.spago.dispatching.httpchannel.AdapterHTTP</servlet-class>
	</servlet>

    <servlet>
        <servlet-name>SpagoBIDrillServlet</servlet-name>
        <servlet-class>it.eng.spagobi.utilities.callbacks.drill.SpagoBIDrillServlet</servlet-class>
    </servlet>

	 
    <!--  ============================================================================ -->
	<!--  SERVLET MAPPINGS						 									   -->
	<!--  ============================================================================ -->
	<servlet-mapping>
		<servlet-name>AdapterHTTP</servlet-name>
		<url-pattern>/servlet/AdapterHTTP</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
        <servlet-name>SpagoBIDrillServlet</servlet-name>
        <url-pattern>/SpagoBIDrillServlet</url-pattern>
    </servlet-mapping>
    
    
    
    
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
    
  <error-page>
