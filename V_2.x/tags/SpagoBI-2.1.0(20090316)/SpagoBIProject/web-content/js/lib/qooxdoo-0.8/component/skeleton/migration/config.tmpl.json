{
  "name"    : "${Name}",

  "include" :
  [
    {
      "path" : "${REL_QOOXDOO_PATH}/tool/data/config/application.json",
      "as"   : "appconf"
    }
  ],

  "let" :
  {
    "APPLICATION"  : "${Namespace}",
    "QOOXDOO_PATH" : "${REL_QOOXDOO_PATH}/framework",
    "QOOXDOO_URI"  : "../$${QOOXDOO_PATH}",
    "QXTHEME"      : "qx.theme.Modern",
    "LOCALES"      : [ "en" ],
    "ROOT"         : "."
  },

  "jobs" :
  {
    "api" :
    {
      "extend" : ["appconf::api"]
    },

    "build" :
    {
      "extend" : ["appconf::build"],

      "settings" :
      {
        "qx.legacy.theme" : "qx.legacy.theme.ClassicRoyale"
      }
    },

    "clean" :
    {
      "extend" : ["appconf::clean"]
    },

    "distclean" :
    {
      "extend" : ["appconf::distclean"]
    },

    "fix" :
    {
      "extend" : ["appconf::fix"]
    },

    "lint" :
    {
      "extend" : ["appconf::lint"]
    },

    "migration" :
    {
      "extend" : ["appconf::migration"]
    },

    "pretty" :
    {
      "extend" : ["appconf::pretty"]
    },

    "publish" :
    {
      "extend" : ["appconf::publish"]
    },

    "source" :
    {
      "extend" : ["appconf::source"],

      "settings" :
      {
        "qx.legacy.theme" : "qx.legacy.theme.ClassicRoyale"
      }
    },

    "test" :
    {
      "extend" : ["appconf::test"]
    },

    "test-source" :
    {
      "extend" : ["appconf::test-source"]
    },

    "translate" :
    {
      "extend" : ["appconf::translate"]
    }

  }
}
