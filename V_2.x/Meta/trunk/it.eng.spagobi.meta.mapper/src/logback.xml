<?xml version="1.0" encoding="UTF-8"?>

<configuration>

  <!-- ===============================================================================  -->
  <!-- APPENDERS  																		-->
  <!-- ===============================================================================  -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
    <append>false</append>
    <File>./log/spagobi/metamapper.log</File>
    <encoder>
      <pattern>%d{yyyy-MM-dd} %5p %c.%M:%L - %m%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <maxIndex>0</maxIndex>
      <FileNamePattern>./log/spagobi/metamapper.log.%i</FileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10000KB</MaxFileSize>
    </triggeringPolicy>
  </appender>
  
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%c.%M:%L - %m%n</pattern>
    </encoder>
  </appender>
  
  <!-- ===============================================================================  -->
  <!-- LOGGERS  																		-->
  <!-- ===============================================================================  -->
  
  <root level="ERROR">
    <appender-ref ref="CONSOLE"/>
  </root>
  
  <logger name="it.eng.spagobi" additivity="false" level="DEBUG">
    <appender-ref ref="FILE"/>
    <appender-ref ref="CONSOLE"/>
  </logger>
  
  <!-- ===============================================================================  -->
  <!-- HOOK with console  																		-->
  <!-- ===============================================================================  -->
  
  <consolePlugin />
  
  
</configuration>