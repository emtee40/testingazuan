<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="%oda.data.source.id"
         point="org.eclipse.datatools.connectivity.oda.dataSource">
      <dataSource
            driverClass="it.eng.spagobi.meta.oda.impl.Driver"
            defaultDisplayName="%data.source.name"
            setThreadContextClassLoader="false"
            odaVersion="3.2"
            id="%oda.data.source.id">
         <properties>
            <property
                  name="resource_folder"
                  allowsEmptyValueAsNull="false"
                  defaultDisplayName="Resource folder path"
                  type="string"
                  defaultValue="D:\Documenti\Sviluppo\servers\tomcat6spagobi3\resources\qbe\datamarts"
                  isEncryptable="false">
            </property>
            <property
                  name="datamart_name"
                  allowsEmptyValueAsNull="false"
                  defaultDisplayName="Datamart name"
                  type="string"
                  defaultValue="foodmart"
                  isEncryptable="false">
            </property>
            <property
                  name="database_url"
                  allowsEmptyValueAsNull="false"
                  defaultDisplayName="Connection URL"
                  type="string"
                  defaultValue="jdbc:mysql://localhost:3306/foodmart"
                  isEncryptable="false">
            </property>
            <property
                  name="database_driver"
                  allowsEmptyValueAsNull="false"
                  defaultDisplayName="Driver class"
                  type="string"
                  defaultValue="com.mysql.jdbc.Driver"
                  isEncryptable="false">
            </property>
            <property
                  name="database_dialect"
                  allowsEmptyValueAsNull="false"
                  defaultDisplayName="SQL dialect class"
                  type="string"
                  defaultValue="org.hibernate.dialect.MySQLDialect"
                  isEncryptable="false">
            </property>
            <property
                  name="database_user"
                  allowsEmptyValueAsNull="false"
                  defaultDisplayName="User"
                  type="string"
                  defaultValue="root"
                  isEncryptable="false">
            </property>
            <property
                  name="database_password"
                  allowsEmptyValueAsNull="false"
                  defaultDisplayName="Password"
                  type="string"
                  defaultValue="mysql"
                  isEncryptable="false">
            </property>
         </properties>
      </dataSource>
      <dataSet
            defaultDisplayName="%data.set.name"
            id="it.eng.spagobi.meta.oda.dataSet">
         <dataTypeMapping
               nativeDataTypeCode="1"
               odaScalarDataType="String"
               nativeDataType="String">
         </dataTypeMapping>
         <dataTypeMapping
               nativeDataTypeCode="4"
               odaScalarDataType="Integer"
               nativeDataType="Integer">
         </dataTypeMapping>
         <dataTypeMapping
               nativeDataTypeCode="8"
               odaScalarDataType="Double"
               nativeDataType="Double">
         </dataTypeMapping>
         <dataTypeMapping
               nativeDataTypeCode="3"
               odaScalarDataType="Decimal"
               nativeDataType="BigDecimal">
         </dataTypeMapping>
         <dataTypeMapping
               nativeDataTypeCode="91"
               odaScalarDataType="Date"
               nativeDataType="Date">
         </dataTypeMapping>
         <dataTypeMapping
               nativeDataTypeCode="92"
               odaScalarDataType="Time"
               nativeDataType="Time">
         </dataTypeMapping>
         <dataTypeMapping
               nativeDataTypeCode="93"
               odaScalarDataType="Timestamp"
               nativeDataType="Timestamp">
         </dataTypeMapping>
         <dataTypeMapping
               nativeDataTypeCode="16"
               odaScalarDataType="Boolean"
               nativeDataType="Boolean">
         </dataTypeMapping>
      </dataSet>
   </extension>
   <extension
         point="org.eclipse.datatools.connectivity.connectionProfile">
      <category
            name="%data.source.name"
            parentCategory="org.eclipse.datatools.connectivity.oda.profileCategory"
            id="%oda.data.source.id">
      </category>
      <connectionProfile
            pingFactory="org.eclipse.datatools.connectivity.oda.profile.OdaConnectionFactory"
            name="%connection.profile.name"
            category="%oda.data.source.id"
            id="%oda.data.source.id">
      </connectionProfile>
      <connectionFactory
            name="ODA Connection Factory"
            profile="%oda.data.source.id"
            class="org.eclipse.datatools.connectivity.oda.profile.OdaConnectionFactory"
            id="org.eclipse.datatools.connectivity.oda.IConnection">
      </connectionFactory>
   </extension>

</plugin>
