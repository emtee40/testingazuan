<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true">

  <appender name="STDFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>./log/Meta/treeBuilder.log</File>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <FileNamePattern>treeBuilder.%d{yyyy-MM-dd}.log</FileNamePattern>
      <!-- keep 30 days worth of history -->
      <MaxHistory>30</MaxHistory>
    </rollingPolicy>

    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d [%thread] %-5level  %caller{1} - %msg%n %ex</Pattern>
    </layout>
  </appender> 

  		
  <root level="debug">
    <appender-ref ref="STDFILE" />
  </root>
</configuration>