<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>spagobi</groupId>
  <version>1.8</version>
  <artifactId>app</artifactId>
  <packaging>pom</packaging>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
	    <id>target_dir_creation</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
		<mkdir dir="${basedir}/target"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>SpagoBIUtils</module>
    <module>SpagoBIDriversAPI</module>
    <module>SpagoBISecurityProviderAPI</module>
    <module>QbeCore</module>
    <module>SpagoBIProject</module>
    <module>ExoPortalSecurityProvider</module>
    <module>SpagoBIJasperReportDriver</module>
    <module>SpagoBIJPivotDriver</module>
    <module>SpagoBIJPivotEngine</module>
    <module>SpagoBIJasperReportEngine</module>
  </modules>
</project>
