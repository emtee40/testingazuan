<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <owner>portal</owner>
  <!-- <locale>en</locale> -->
  <viewPermission>any</viewPermission>
  <editPermission>owner</editPermission>

  
  <portalLayout decorator="exo" renderer="ContainerRowRenderer"
    width="100%" height="100%">
 
   
    <container renderer="ContainerColumnRenderer" height="59px">
    	<portlet height="59px">
      		<showInfoBar>false</showInfoBar>
      		<windowId>portal:/content/DisplayStaticContent/banner</windowId>
      		<portlet-preferences>
        		<preference>
          		<name>default</name>
          		<value>title=Default Content</value>
          		<value>uri=war:/portal/spagobi-static-content/banner.html</value>
          		<value>encoding=UTF-8</value>
        		</preference>
      		</portlet-preferences>
    	</portlet>
	<container renderer="ContainerRowRenderer" height="59px">
        	<portlet >
          	  <portlet-style>welcome</portlet-style>
          	  <title>Welcome</title>
          	  <showInfoBar>false</showInfoBar>
          	  <windowId>portal:/user/WelcomePortlet/welcome-user</windowId>
        	</portlet>
		<portlet >
      	   		<showInfoBar>false</showInfoBar>
           		<windowId>portal:/content/DisplayStaticContent/footer</windowId>
           		<portlet-preferences>
             			<preference>
               				<name>default</name>
               				<value>title=Default Content</value>
               				<value>uri=war:/portal/spagobi-static-content/footer.html</value>
               				<value>encoding=UTF-8</value>
             			</preference>
           		</portlet-preferences>
        	</portlet>
        </container>
    </container>
 


    <portlet height="10px">
       <portlet-style>breadcrumbs</portlet-style>
       <showInfoBar>false</showInfoBar>
       <windowId>portal:/nav/Breadcrumbs/breadcrumbs</windowId>
    </portlet>
       
    
    <portlet width="100%">
      		<portlet-style>horizontal</portlet-style>
      		<showInfoBar>false</showInfoBar>
      		<windowId>portal:/nav/HorizontalMenu/toolbar</windowId>
    </portlet>
    <container renderer="ContainerColumnRenderer" height="100%">
      <!--
      <container renderer="ContainerRowRenderer" decorator="menu" width="200px">
       <portlet>
          <portlet-style>menu</portlet-style>
          <showInfoBar>false</showInfoBar>
          <windowId>portal:/nav/Menu/menu</windowId>
       </portlet> 

	<portlet height="100%">
      	   <showInfoBar>false</showInfoBar>
           <windowId>portal:/content/DisplayStaticContent/footer</windowId>
           <portlet-preferences>
             <preference>
               <name>default</name>
               <value>title=Default Content</value>
               <value>uri=war:/portal/spagobi-static-content/footer.html</value>
               <value>encoding=UTF-8</value>
             </preference>
           </portlet-preferences>
        </portlet>
      </container>
      -->
      <container renderer="ContainerRowRenderer">
        <container decorator="exo-body">
          <body>
            <componentType>page-node</componentType>
            <componentId>/</componentId>
          </body>
        </container>
      </container>
    </container>
  </portalLayout>
</portal-config>
