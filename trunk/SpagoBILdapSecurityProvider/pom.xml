<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>spagobi</groupId>
    <artifactId>app</artifactId>
    <version>1.9.4</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>spagobi</groupId>
  <artifactId>sbi.security.ldap</artifactId>
  <packaging>jar</packaging>
  <version>1.9.4</version>
  <name>SpagoBILdapSecurityProvider</name>
  <url>http://maven.apache.org</url>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>src/</directory>
        <targetPath>/</targetPath>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
  </build>
  <properties>
    <lib.dir>${basedir}/lib</lib.dir>
    <spagobi.compiled.dir>${basedir}/../SpagoBIProject/target/classes</spagobi.compiled.dir>
  </properties>
  <dependencies>
    <dependency>
      <groupId>spago-core</groupId>
      <artifactId>spago-core</artifactId>
      <version>2.2.0</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/spago-core-2.2.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>ldap</groupId>
      <artifactId>ldap</artifactId>
      <version>1</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/ldap.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit-3.8.1</artifactId>
      <version>3.8.1</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/junit-3.8.1.jar</systemPath>
    </dependency>    
    <dependency>
      <groupId>spagobi</groupId>
      <artifactId>sbi.securityprovider.api</artifactId>
      <version>1.9.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>xalan</groupId>
      <artifactId>xalan</artifactId>
      <version>2.4.0</version>
      <scope>system</scope>
      <systemPath>${lib.dir}/xalan-2.4.0.jar</systemPath>
    </dependency> 
    <dependency>
      <groupId>xercesImpl</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${lib.dir}/xercesImpl.jar</systemPath>
    </dependency> 
    <dependency>
      <groupId>xml-apis</groupId>
      <artifactId>xml-apis</artifactId>
      <version>2.0.2</version>
      <scope>system</scope>
      <systemPath>${lib.dir}/xml-apis-2.0.2.jar</systemPath>
    </dependency>  
    <dependency>
      <groupId>spagobi</groupId>
      <artifactId>spagobi</artifactId>
      <version>1.9.4</version>
      <scope>system</scope>
      <systemPath>${spagobi.compiled.dir}</systemPath>
    </dependency>            
  </dependencies>
</project>
