  <profiles>
    <profile>
      <id>tomcat-server</id>
      <build>
        <plugins>
      	  <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <configuration>
                  <tasks>

		    <!-- copy the required files in the correct server folders structure -->
		    <mkdir dir="${basedir}/../build/tomcat-server/"/>
		    <copy todir="${basedir}/../build/tomcat-server/">
  		      <fileset dir="${basedir}/../SpagoBIUtilityFiles/tomcat-server/"/>
 		    </copy>

		    <!-- copy the libraries requested by the exo-cms or jackrabbit profile into common/lib -->
		    <mkdir dir="${basedir}/../build/tomcat-server/common/lib"/>
		    <copy todir="${basedir}/../build/tomcat-server/common/lib">
  		      <fileset dir="${basedir}/../temp/libraries/"/>
 		    </copy>

		    <!-- move the instructions file -->
		    <move file="${basedir}/../build/tomcat-server/tomcat_installation_instructions.txt"
			  tofile="${basedir}/../build/tomcat_installation_instructions.txt" />

		    <!-- unzip spagobi -->
		    <unzip src="${basedir}/target/spagobi-1.8.war" 
			   dest="${basedir}/../build/tomcat-server/webapps/spagobi"/>

		    <!-- put the correct cms.xml required by the exo-cms or jackrabbit profile -->
		    <delete file="${basedir}/../build/tomcat-server/webapps/spagobi/WEB-INF/conf/cms.xml"/>
		    <delete file="${basedir}/../build/tomcat-server/webapps/spagobi/WEB-INF/conf/cms-jackrabbit.xml"/>
		    <copy file="${basedir}/../temp/cms.xml/cms.xml"
			  tofile="${basedir}/../build/tomcat-server/webapps/spagobi/WEB-INF/conf/cms.xml"/>

		    <!-- delete temp folder -->
		    <delete dir="${basedir}/../temp"/>

		    <!-- delete hibernate configuration file for JOnAS -->
		    <delete file="${basedir}/../build/tomcat-server/webapps/spagobi/WEB-INF/classes/hibernate_jonas.cfg.hsql.xml"/>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
