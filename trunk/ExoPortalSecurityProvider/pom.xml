<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>spagobi</groupId>
    <artifactId>app</artifactId>
    <version>1.8</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>spagobi</groupId>
  <artifactId>sbi.security.exo</artifactId>
  <packaging>jar</packaging>
  <version>1.8</version>
  <name>ExoPortalSecurityProvider</name>
  <url>http://maven.apache.org</url>
  <build>
    <sourceDirectory>src</sourceDirectory>
  </build>
  <profiles>
    <profile>
      <id>tomcat-server</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <configuration>
                  <tasks>
                    <mkdir dir="${basedir}/../build/tomcat-server/webapps/spagobi/WEB-INF/lib/"/>
    	            <copy todir="${basedir}/../build/tomcat-server/webapps/spagobi/WEB-INF/lib/">
      	              <fileset dir="${basedir}/target/">
      	                <include name="*.jar" />
      	              </fileset>
     	            </copy>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jboss-server</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <configuration>
                  <tasks>
                    <mkdir dir="${basedir}/../build/jboss-server/server/default/deploy/exoplatform.sar/spagobi.war/WEB-INF/lib/"/>
    	            <copy todir="${basedir}/../build/jboss-server/server/default/deploy/exoplatform.sar/spagobi.war/WEB-INF/lib/">
      	              <fileset dir="${basedir}/target/">
      	                <include name="*.jar" />
      	              </fileset>
     	            </copy>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jonas-server</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <configuration>
                  <tasks>
                    <mkdir dir="${basedir}/../build/jonas-server/apps/autoload/exoplatform.ear/spagobi.war/WEB-INF/lib/"/>
    	            <copy todir="${basedir}/../build/jonas-server/apps/autoload/exoplatform.ear/spagobi.war/WEB-INF/lib/">
      	              <fileset dir="${basedir}/target/">
      	                <include name="*.jar" />
      	              </fileset>
     	            </copy>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
   </profiles>
  <dependencies>
	<dependency>
                <groupId>spago-core</groupId>
                <artifactId>spago-core</artifactId>
                <version>2.0.0</version>
      		<scope>system</scope>
      		<systemPath>${basedir}/../SpagoBIProject/web-content/WEB-INF/lib/spago-core-2.0.0.jar</systemPath>
        </dependency>
        <dependency>
                <groupId>exo</groupId>
                <artifactId>exo-platform.container</artifactId>
                <version>2.0</version>
		<scope>system</scope>
      		<systemPath>${basedir}/../SpagoBIUtilityFiles/eXo2-libraries/exo-platform.container-2.0.jar</systemPath>
        </dependency>
	<dependency>
                <groupId>exo</groupId>
                <artifactId>exo-platform.services.database.api</artifactId>
                <version>2.0</version>
      		<scope>system</scope>
      		<systemPath>${basedir}/../SpagoBIUtilityFiles/eXo2-libraries/exo-platform.services.database.api-2.0.jar</systemPath>
        </dependency>
        <dependency>
                <groupId>exo</groupId>
                <artifactId>exo-platform.services.organization.api</artifactId>
                <version>2.0</version>
      		<scope>system</scope>
      		<systemPath>${basedir}/../SpagoBIUtilityFiles/eXo2-libraries/exo-platform.services.organization.api-2.0.jar</systemPath>
        </dependency>
        <dependency>
                <groupId>picocontainer</groupId>
                <artifactId>picocontainer</artifactId>
                <version>1.1</version>
		<scope>compile</scope>
        </dependency>
        <dependency>
                <groupId>tomcat</groupId>
                <artifactId>jasper-compiler</artifactId>
                <version>5.5.9</version>
		<scope>compile</scope>
        </dependency>
        <dependency>
                <groupId>spagobi</groupId>
                <artifactId>spagobi</artifactId>
                <version>1.8</version>
      		<scope>system</scope>
      		<systemPath>${basedir}/../SpagoBIProject/target/classes/</systemPath>
        </dependency>
        <dependency>
                <groupId>spagobi</groupId>
                <artifactId>sbi.securityprovider.api</artifactId>
                <version>1.8</version>
		<scope>compile</scope>
        </dependency>
  </dependencies>
</project>
