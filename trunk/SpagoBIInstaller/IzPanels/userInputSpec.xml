<userInput>
	<panel order="0">
		<field type="title">
			<description id="server.type.title"/>
		</field>
		<field type="combo" variable="SERVER_TYPE">
			<description id="server.type.description"/>
			<spec>
				<choice txt="Tomcat" value="tomcat" set="true"/>
				<choice txt="JBoss" value="jboss"/>
				<choice txt="JOnAS" value="jonas"/>
			</spec>
		</field>
	</panel>
	<panel order="1">
		<field type="title">
			<description id="engines.to.install"/>
		</field>
		<field type="staticText" align="left" id="engines.to.install"/>
		<field type="check" variable="BIRT">
			<spec id="SpagoBIBirtReportEngine.description" true="yes" false="no" set="true"/>
		</field>
		<field type="check" variable="GEO">
			<spec id="SpagoBIGeoEngine.description" true="yes" false="no" set="true"/>
		</field>
		<field type="check" variable="JASPER">
			<spec id="SpagoBIJasperReportEngine.description" true="yes" false="no" set="true"/>
		</field>
		<field type="check" variable="JPIVOT">
			<spec id="SpagoBIJPivotEngine.description" true="yes" false="no" set="true"/>
		</field>
		<field type="check" variable="QBE">
			<spec id="SpagoBIQbeEngine.description" true="yes" false="no" set="true"/>
		</field>
		<field type="check" variable="WEKA">
			<spec id="SpagoBIWekaEngine.description" true="yes" false="no" set="true"/>
		</field>
		<field type="space" />
		<field type="staticText" align="left" id="examples.to.install"/>
		<field type="check" variable="SPAGOBI_EXAMPLES">
			<spec id="examples.description" true="yes" false="no" set="false"/>
		</field>
		<field type="staticText" align="left" id="examples.warning"/>
	</panel>
	<panel order="2">
		<field type="title">
			<description id="database.connection.def"/>
		</field>
		<field type="staticText" align="left" id="database.connection.def"/>
		<field type="space" />
		<field type="combo" variable="DRIVER">
			<description id="database.driver"/>
			<spec>
				<choice txt="org.hsqldb.jdbcDriver" value="org.hsqldb.jdbcDriver" set="true"/>
				<choice txt="org.postgresql.Driver" value="org.postgresql.Driver"/>
				<choice txt="com.mysql.jdbc.Driver" value="com.mysql.jdbc.Driver"/>
				<choice txt="oracle.jdbc.OracleDriver" value="oracle.jdbc.OracleDriver"/>
			</spec>
		</field>
		<field type="space" />
		<!--
		<field type="text" variable="CONNECTION_URL">
			<description align="left" id="database.connection.url"/>
			<spec txt="" size="50" set=""/>
		</field>
		<field type="space" />
		<field type="text" variable="USERNAME">
			<description align="left" id="database.username"/>
			<spec txt="" size="25" set=""/>
		</field>
		<field type="space" />
		-->
		<field type="rule" variable="CONNECTION_URL">
			<description align="left" id="database.connection.url"/>
			<spec txt="" layout="O:30:U" resultFormat="plainString"/>
			<validator class="com.izforge.izpack.util.NotEmptyValidator" txt="The connection url is mandatory!" />
		</field>
		<field type="space" />
		<field type="rule" variable="USERNAME">
			<description align="left" id="database.username"/>
			<spec txt="" layout="O:15:U" resultFormat="plainString"/>
			<validator class="com.izforge.izpack.util.NotEmptyValidator" txt="The username is mandatory!" />
		</field>
		<field type="space" />
		<field type="text" variable="PASSWORD">
			<description align="left" id="database.password"/>
			<spec txt="" size="18" set=""/>
		</field>
	</panel>
</userInput>