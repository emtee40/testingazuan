<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">
 	
	<info>
        <appname>SpagoBI</appname>
        <appversion>1.9.2</appversion>
        <authors>
        </authors>
        <url>http://spagobi.eng.it</url>
        <uninstaller write="no" />
    </info>
 	
 	<native type="izpack" name="ShellLink.dll" />
 	
 	<guiprefs height="600" resizable="yes" width="800">
        <laf name="looks">
            <os family="unix"/>
        </laf>
    	<modifier key="layoutAnchor" value="CENTER"/>
    	<modifier key="headingPanelCounter" value="progressbar"/>
		<modifier key="headingPanelCounterPos" value="inNavigationPanel"/>
		<modifier key="allYGap" value="3"/>
		<modifier key="paragraphYGap" value="10"/>	
		<modifier key="filler1YGap" value="5"/>
		<modifier key="filler3XGap" value="10"/>
		<modifier key="useButtonIcons" value="yes"/>
		<modifier key="useLabelIcons" value="yes"/>
    </guiprefs>
    <locale>
    	<langpack iso3="eng"/>
    	<langpack iso3="ita"/>
    </locale>
    <resources>
    	<res src="IzPanels/Logo_Spago_BI_sitoweb.gif" id="installer.langsel.img"/>
   		<res src="IzPanels/Introduction.txt" id="InfoPanel.info"/>
   		<res src="IzPanels/Introduction_ita.txt" id="InfoPanel.info_ita"/>
    	<res src="IzPanels/Licence.txt" id="LicencePanel.licence"/>
    	<res src="IzPanels/HTMLInfoPanel.txt" id="HTMLInfoPanel.info"/>
    	<res src="IzPanels/HTMLInfoPanel_ita.txt" id="HTMLInfoPanel.info_ita"/>
    	<res src="IzPanels/userInputSpec.xml" id="userInputSpec.xml"/>
    	<res src="IzPanels/userInputLang.xml_ita" id="userInputLang.xml_ita"/>
    	<res src="IzPanels/userInputLang.xml_eng" id="userInputLang.xml_eng"/>
    	<res src="IzPanels/Win_shortcutSpec.xml" id="shortcutSpec.xml"/>
    	<res src="IzPanels/Unix_shortcutSpec.xml" id="Unix_shortcutSpec.xml"/>
    	<res src="IzPanels/TargetPanel_dir_windows.txt" id="TargetPanel.dir.windows"/>
    	<res src="IzPanels/TargetPanel_dir_unix.txt" id="TargetPanel.dir.unix"/>
    	<res src="IzPanels/conditions.xml" id="conditions.xml"/>
    	<!--
    	<res src="IzPanels/CustomLangpack_ita.xml" id="CustomLangpack.xml_ita"/>
    	<res src="IzPanels/CustomLangpack_eng.xml" id="CustomLangpack.xml_eng"/>
    	-->
	</resources>
	<panels>
    	<panel classname="HelloPanel" id="hellopanel"/>
   		<panel classname="InfoPanel" id="infopanel"/>
   		<panel classname="LicencePanel" id="licencepanel"/>
   		<panel classname="UserInputPanel" id="serverType"/>
   		<panel classname="UserInputPanel" id="engineAndExamples"/>
	    <panel classname="SpagoBITargetPanel" id="targetpanel"/>
	    <!--panel classname="UserInputPanel" id="db_connection_def"/-->
    	<panel classname="InstallPanel" id="installpanel"/>
    	<!--panel classname="HTMLInfoPanel"/-->
    	<panel classname="ShortcutPanel" id="shortcutpanel"/>
    	<panel classname="SpagoBIFinishPanel" id="finishpanel"/>
	</panels>

    <packs>
		<pack name="SpagoBIPlatform" required="yes">
    		<description>SpagoBI platform</description>
    		<fileset dir="" targetdir="$INSTALL_PATH">
      			<include name="spagobi/**/*" />
      			<include name="install_spagobi_support_classes.jar" />
		    </fileset>
    		<fileset dir="batch" targetdir="$INSTALL_PATH">
      			<include name="StartSpagoBI.bat" />
      			<include name="StartSpagoBI_jboss.bat" />
      			<include name="StartSpagoBI_jonas.bat" />
      			<include name="OOStart.bat" />
      			<include name="SpagoBI.ico" />
      			<include name="StartSpagoBI.sh" />
      			<include name="StartSpagoBI_jboss.sh" />
      			<include name="StartSpagoBI_jonas.sh" />
      			<include name="OOStart.sh" />
      			<include name="SpagoBI.png" />
		    </fileset>
		    <executable targetfile="$INSTALL_PATH/install_spagobi_support_classes.jar" class="it/eng/spagobi/installer/InstallSpagoBIPlatform" type="jar" stage="postinstall"> 
		    	<args>
		    		<arg value="$INSTALL_PATH"/>
		    		<arg value="$SERVER_TYPE"/>
		    		<arg value="$BIRT"/>
		    		<arg value="$GEO"/>
		    		<arg value="$JASPER"/>
		    		<arg value="$JPIVOT"/>
		    		<arg value="$QBE"/>
		    		<arg value="$WEKA"/>
		    		<arg value="$SPAGOBI_EXAMPLES"/>
		    	</args>
		    </executable>
		</pack>
    </packs>
</installation>
