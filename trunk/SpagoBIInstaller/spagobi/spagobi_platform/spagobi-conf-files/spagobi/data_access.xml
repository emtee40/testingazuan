	<CONNECTION-POOL connectionPoolName="dwh" 
   					connectionPoolFactoryClass="it.eng.spago.dbaccess.pool.JNDIConnectionPoolFactory" 
   					connectionPoolType="native" connectionDescription="Foodmart Data Warehouse on HSQL DB">
