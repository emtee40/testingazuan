    <jndi-name>dwh</jndi-name>
    <connection-url>${CONNECTION_URL}</connection-url>
    <driver-class>${DRIVER}</driver-class>
    <user-name>${USERNAME}</user-name>
    <password>${PASSWORD}</password>
   
    
    <min-pool-size>5</min-pool-size>

