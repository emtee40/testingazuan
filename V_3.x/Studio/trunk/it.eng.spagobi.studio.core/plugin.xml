<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>




   <extension
         id="spagoBIStudioBuilder"
         name="SpagoBIStudio Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder hasNature="true">
         <run class="it.eng.spagobi.studio.core.builder.SpagoBIStudioBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="spagoBIStudioNature"
         name="SpagoBIStudio Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="it.eng.spagobi.studio.core.builder.SpagoBIStudioNature">
         </run>
      </runtime>
      <builder
            id="it.eng.spagobi.studio.core.spagoBIStudioBuilder">
      </builder>
   </extension>
   <extension point="org.eclipse.ui.views">
      <category
            name="SpagoBI"
            id="it.eng.spagobi.studio.core">
      </category>

   </extension> 
	<!-- RESOURCE NAVIGATOR -->
	<extension
         point="org.eclipse.ui.views">
      <view
            name="SpagoBIStudio Resource Navigator"
            category="it.eng.spagobi.studio.core"
            class="it.eng.spagobi.studio.core.views.ResourceNavigator"
            id="it.eng.spagobi.studio.core.views.ResourceNavigator"
            icon="icons/sbiproject.gif">
      </view>
   </extension>

	<extension
         point="org.eclipse.ui.navigator.viewer">
       <viewerActionBinding
            viewerId="it.eng.spagobi.studio.core.views.ResourceNavigator">
         <includes>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.*" />
         </includes>
       </viewerActionBinding>
       <viewerContentBinding 
            viewerId="it.eng.spagobi.studio.core.views.ResourceNavigator">
          <includes>
       	     <contentExtension pattern="org.eclipse.ui.navigator.resourceContent" />		       	      
	     	 <contentExtension pattern="org.eclipse.ui.navigator.resources.filters.*"/>
             <contentExtension pattern="org.eclipse.ui.navigator.resources.linkHelper"/>
             <contentExtension pattern="org.eclipse.ui.navigator.resources.workingSets"/>
          </includes>
       </viewerContentBinding>
   </extension>
	<!-- PERSPECTIVE -->
   <extension point="org.eclipse.ui.perspectives">
	   <perspective
	         name="SpagoBI"
	         class="it.eng.spagobi.studio.core.perspectives.SpagoBIPerspective"
	         id="it.eng.spagobi.studio.core.perspectives.SpagoBIPerspective"
	         icon="icons/sbiproject.gif" >
	   </perspective>
	</extension>
		<!-- PREFERENCE PAGE -->
    <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="SpagoBI"
            class="it.eng.spagobi.studio.core.preferences.SpagoBIPreferencePage"
            id="it.eng.spagobi.studio.core.preferences.SpagoBIPreferencePage">
      </page>
    </extension>
    		<!-- NEW SPAGOBI WIZARD -->
    		
    <extension point="org.eclipse.ui.newWizards">
      <category id="SpagoBI" name="SpagoBI" />
      <wizard
            category="SpagoBI"
            class="it.eng.spagobi.studio.core.wizards.NewSpagoBIProjectWizard"
            hasPages="true"
            icon="icons/sbiproject.gif"
            id="it.eng.spagobi.studio.core.wizards.newSpagoBIProjectWizard"
            name="SpagoBI Project"
            project="true" 
            finalPerspective="it.eng.spagobi.studio.core.perspectives.SpagoBIPerspective" />
   </extension>
    		<!-- CONTEXT MENU SPAGOBI-DOCUMENTS-->
   <extension point="org.eclipse.ui.popupMenus">
   
      <!-- LIMIT ON MODEL FOLDER-->
   <objectContribution
             id="it.eng.spagobi.studio.core.popupmenu.ModelMenuContribution"
             objectClass="org.eclipse.core.internal.resources.Folder"
             targetID="it.eng.spagobi.studio.core.views.ModelMenuNavigator"
              nameFilter="*Metadata Model*"
             >			
			<!-- MENU SBI DOCUMENTS-->
        	 <menu
    	      	id="it.eng.spagobi.studio.core.main.menu" 
				icon="icons/sbiproject.gif"            
			    path="additions" 
	            label="SpagoBI"> 
	            <separator name="SpagoBI"/> 
	         </menu> 
			<!-- NEW MODEL ACTION -->
	         <action
	            id="it.eng.spagobi.meta.editor.business.actions.NewSpagoBIModelAction" 
            	label="New Meta Model"
            	icon="icons/metadata.png"
            	style="push"
            	menubarPath="it.eng.spagobi.studio.core.main.menu/SpagoBI" 
            	class="it.eng.spagobi.meta.editor.business.actions.NewSpagoBIModelAction" /> 
		</objectContribution>
   
   
   
   
   
   
   
   <!-- LIMIT ON SERVER FOLDER-->
   <objectContribution
             id="it.eng.spagobi.studio.core.popupmenu.ResourceNavigatorContribution"
             objectClass="org.eclipse.core.internal.resources.Folder"
             targetID="it.eng.spagobi.studio.core.views.ResourceNavigator"
              nameFilter="*Server*"
             >			
			<!-- MENU SBI DOCUMENTS-->
        	 <menu
    	      	id="it.eng.spagobi.studio.core.main.menu" 
				icon="icons/sbiproject.gif"            
			    path="additions" 
	            label="SpagoBI"> 
	            <separator name="SpagoBI"/> 
	         </menu> 
			<!-- NEW SERVER ACTION -->
	         <action
	            id="it.eng.spagobi.studio.core.actions.NewServerAction" 
            	label="New server"
            	icon="icons/server_active.png"
            	style="push"
            	menubarPath="it.eng.spagobi.studio.core.main.menu/SpagoBI" 
            	class="it.eng.spagobi.studio.core.actions.NewServerAction" /> 
		</objectContribution>
			
		<!-- LIMIT ON FILE-->
		<objectContribution
             id="it.eng.spagobi.studio.core.popupmenu.ResourceNavigatorContribution"
             objectClass="org.eclipse.core.internal.resources.File"
             targetID="it.eng.spagobi.studio.core.views.ResourceNavigator">
			<filter name="path" value="*Sbi Analysis*"/>
			
			<!-- MENU SBI DOCUMENTS-->
        	 <menu
    	      	id="it.eng.spagobi.studio.core.main.menu" 
				icon="icons/sbiproject.gif"            
			    path="additions" 
	            label="SpagoBI"> 
	            <separator name="SpagoBI"/> 
	         </menu> 
			<!-- DEPLOY ACTION-->
	         <action
	            id="it.eng.spagobi.studio.core.actions.DeployDocumentAction" 
            	label="Deploy document into server"
            	style="push"
            	menubarPath="it.eng.spagobi.studio.core.main.menu/SpagoBI" 
            	class="it.eng.spagobi.studio.core.actions.DeployDocumentAction" /> 
			<!-- REFRESH ACTION-->
         	<action
            	id="it.eng.spagobi.studio.core.actions.RefreshTemplateAction" 
            	label="Refresh document template"
            	style="push"
            	menubarPath="it.eng.spagobi.studio.core.main.menu/SpagoBI" 
            	class="it.eng.spagobi.studio.core.actions.RefreshTemplateAction" /> 
		</objectContribution>
		
		<!-- LIMIT ON FOLDER-->
		<objectContribution
             id="it.eng.spagobi.studio.core.popupmenu.ResourceNavigatorContribution2"
             objectClass="org.eclipse.core.internal.resources.Folder"
             targetID="it.eng.spagobi.studio.core.views.ResourceNavigator"
             >             
		<filter name="path" value="*Sbi Analysis*"/>
         <menu
            id="it.eng.spagobi.studio.core.main.menu" 
            path="additions" 
            label="SpagoBI Documents"> 
            <separator name="SpagoBI"/> 
         </menu> 
       <!-- DOWNLOAD ACTION-->
         <action
            id="it.eng.spagobi.studio.core.actions.DownloadDocumentAction" 
            label="Download document from server"
            style="push"
            menubarPath="it.eng.spagobi.studio.core.main.menu/SpagoBI?after=it.eng.spagobi.studio.birt.actions.NewBirtAction" 
            class="it.eng.spagobi.studio.core.actions.DownloadDocumentAction" />
	</objectContribution>
</extension>
<!--       PROPERTY PAGE -->
<extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="it.eng.spagobi.studio.core.properties.PropertyPage"
            icon="icons/metadata.png"            
            id="it.eng.spagobi.studio.core.propertyPage"
            name="SpagoBI"
            >
            <enabledWhen>
           	<!--  <and> -->
           	<adapt type="org.eclipse.core.internal.resources.File" />
            <!--<path type="*Sbi*" />-->
            <!-- </and> -->
            </enabledWhen>
            
      </page>
</extension>
<!--  EDITORS      -->
   <extension
         point="org.eclipse.ui.editors">
      <!-- SERVER EDITOR -->
      <editor
            name="Server editor"
            extensions="sbiserver"
            icon="icons/server_active.png"
            class="it.eng.spagobi.studio.core.editors.ServerEditor"
            id="it.eng.spagobi.studio.core.editors.ServerEditor">
      </editor>
   </extension>



