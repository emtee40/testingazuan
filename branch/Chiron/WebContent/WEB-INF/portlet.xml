<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">


   <portlet>
        <description>Chiron Demo Portlet</description>		
        <portlet-name>Chiron</portlet-name>		
        <display-name>Chiron</display-name>		
        
        
        <portlet-class>it.eng.spago.dispatching.httpchannel.AdapterPortlet</portlet-class>
        <init-param>
            <name>serviceType</name>
            <value>ACTION</value>
        </init-param>
        <init-param>
            <name>serviceName</name>
            <value>CHIRON_START_ACTION</value>
        </init-param>
        <!--  
        <init-param>
            <name>light_navigation</name>
            <value>ENABLED</value>
        </init-param>	
        -->	        
        <expiration-cache>0</expiration-cache>
        <supports>
	    	<mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		
		<portlet-info>
        	<title>Chiron</title>
        	<short-title>Chiron</short-title>
        	<keywords>Chiron SpagoBI</keywords>
        </portlet-info>
	</portlet>
	
</portlet-app>
