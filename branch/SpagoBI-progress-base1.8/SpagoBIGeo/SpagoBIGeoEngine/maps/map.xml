<?xml version="1.0" encoding="UTF-8"?>
<MAPS>
	<MAP name="abitanti_provincia_venezia" enabled="TRUE">
		<MAP_PROVIDER class_name="it.eng.geo.map.DefaultMapProvider"
		              uri="file:///C:/Progetti/Regione_Veneto/Georeferenziazione/g/VE_comuni/ve_comuni.svg"
					  xml_parser_impl="it.eng.geo.document.XercesXMLDocument"/>
		<DATAMART_PROVIDER class_name="it.eng.geo.datamart.DefaultDatamartProvider" 
		                   registered_pool_name="spagobigeo" 
		                   query="select path_id ,num_abitanti from path_id_abitanti pa,abitanti a where a.cod_istat = pa.cod_istat"
		                   element_id="path_id"
		                   element_name="num_abitanti"/>
		<CONFIGURATION>
			<!-- x,y: position of the first element of the legend  -->
			<LEGEND x="1700000" y="-5080000" width="10000" height="5000" style="stroke:black;stroke-width:100">
				<title style="font-family:verdana;font-size:180em;fill:black" description="Abitanti della provincia di Venezia">
			<!-- ordered by threshold -->
				<LEVELS style="font-family:verdana;font-size:120em;fill:blue"/>
					<LEVEL name="1"  threshold="0"      style="fill:magenta;fill-opacity:0.1" description="Meno di 1000"/>
					<LEVEL name="2"  threshold="1000"   style="fill:magenta;fill-opacity:0.2" description="Da 1000 a 2000"/>
					<LEVEL name="3"  threshold="2000"   style="fill:magenta;fill-opacity:0.3" description="Da 2000 a 3000"/>
					<LEVEL name="4"  threshold="3000"   style="fill:magenta;fill-opacity:0.4" description="Da 3000 a 4000"/>
					<LEVEL name="5"  threshold="4000"   style="fill:magenta;fill-opacity:0.5" description="Da 4000 a 5000"/>
					<LEVEL name="6"  threshold="5000"   style="fill:magenta;fill-opacity:0.6" description="Da 5000 a 10000"/>
					<LEVEL name="7"  threshold="10000"  style="fill:magenta;fill-opacity:0.7" description="Da 10000 a 20000"/>
					<LEVEL name="8"  threshold="20000"  style="fill:magenta;fill-opacity:0.8" description="Da 20000 a 50000"/>
					<LEVEL name="9"  threshold="50000"  style="fill:magenta;fill-opacity:0.9" description="Da 50000 a 100000"/>
					<LEVEL name="10" threshold="100000" style="fill:magenta;fill-opacity:1"   description="Più di 100000"/>
				</LEVELS>
			</LEGEND>
		</CONFIGURATION>
	</MAP>
</MAPS>