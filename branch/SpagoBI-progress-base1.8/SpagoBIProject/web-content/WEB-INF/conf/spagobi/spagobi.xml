<?xml version="1.0" encoding="ISO-8859-1"?>
<SPAGOBI>
	
	<!-- root paths of SpagoBI data into the cms system -->
    <CMS_PATHS>
		<SYSTEM_FUNCTIONALITIES_PATH>/Functionalities/SystemFunctionalities</SYSTEM_FUNCTIONALITIES_PATH>
	</CMS_PATHS>

	
 	<SERVICE_SECURITY>
		<SPAGOBI_PRIVATE_KEY_DSA>spagobi_privatekey</SPAGOBI_PRIVATE_KEY_DSA>
    </SERVICE_SECURITY>

    
    <!--  SPAGOBI SECURITY PROVIDER CONFIGURATION  Default Security Provider is ExoPortalSecurity Provider-->
	<SECURITY>
		<PORTAL-SECURITY-CLASS>it.eng.spagobi.security.ExoPortalSecurityProviderImpl</PORTAL-SECURITY-CLASS>
		<USER-PROFILE-FACTORY-CLASS>it.eng.spagobi.security.ExoPortalUserProfileFactoryImpl</USER-PROFILE-FACTORY-CLASS>
		<ROLE-NAME-PATTERN-FILTER>/spagobi/.*</ROLE-NAME-PATTERN-FILTER>
		<NAME_PORTAL_APPLICATION>sbiportal</NAME_PORTAL_APPLICATION>
		<LOAD-USER-PROFILE-ATTRIBUTES>yes</LOAD-USER-PROFILE-ATTRIBUTES>
	</SECURITY>
	
	<!-- SPAGOBI HIBERNATE PERSISTENCE CONFIGURATTION -->
	<HIBERNATE-CFGFILE>
		<!--  PostgresSQL (Default)  -->
		<!-- hibernate.cfg.xml -->
		<!--  MySQL: Uncomment the row below and edit the file  to provide connection info -->
		<!--  hibernate.cfg.mysql.xml -->
		<!--  Oracle: Uncomment the row below and edit the file to provide connection info -->
		<!--  hibernate.cfg.ora.xml-->
        <!--  Hsqldb: Uncomment the row below and edit the file to provide connection info -->
        hibernate.cfg.hsql.xml
	</HIBERNATE-CFGFILE>
	
	<DAO-CONF>
		<!--  HIBERNATE DAO (DEFAULT) IMPLEMENTATION -->
		
		<DAO name="BIObjectDAO" implementation="it.eng.spagobi.bo.dao.hibernate.BIObjectDAOHibImpl"/>  
		<DAO name="ChecksDAO" implementation="it.eng.spagobi.bo.dao.hibernate.CheckDAOHibImpl"/>
		<DAO name="EngineDAO" implementation="it.eng.spagobi.bo.dao.hibernate.EngineDAOHibImpl"/>
		<DAO name="ParameterDAO" implementation="it.eng.spagobi.bo.dao.hibernate.ParameterDAOHibImpl"/>
		<DAO name="DomainDAO" implementation="it.eng.spagobi.bo.dao.hibernate.DomainDAOHibImpl"/>
		<DAO name="BIObjectParameterDAO" implementation="it.eng.spagobi.bo.dao.hibernate.BIObjectParameterDAOHibImpl"/>
		<DAO name="RoleDAO" implementation="it.eng.spagobi.bo.dao.hibernate.RoleDAOHibImpl"/>
		<DAO name="ModalitiesValueDAO" implementation="it.eng.spagobi.bo.dao.hibernate.LovDAOHibImpl"/>
		<DAO name="ParameterUseDAO" implementation="it.eng.spagobi.bo.dao.hibernate.ParameterUseDAOHibImpl"/>
		<DAO name="LowFunctionalityDAO" implementation="it.eng.spagobi.bo.dao.hibernate.LowFunctionalityDAOHibImpl"/>
		<DAO name="ObjParuseDAO" implementation="it.eng.spagobi.bo.dao.hibernate.ObjParuseDAOHibImpl"/>
		<DAO name="SubreportDAO" implementation="it.eng.spagobi.bo.dao.hibernate.SubreportDAOHibImpl"/>
		
		<!-- CMS DAO IMPLEMENTATION -->
 		<DAO name="BIObjectCMSDAO" implementation="it.eng.spagobi.bo.dao.cms.BIObjectCMSDAOImpl"/>		
		<DAO name="FunctionalityCMSDAO" implementation="it.eng.spagobi.bo.dao.cms.FunctionalityCMSDAOImpl"/>		

